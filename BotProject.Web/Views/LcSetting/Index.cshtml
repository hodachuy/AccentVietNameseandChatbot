        function hoverCopyToClipBoardChange(elm) {
            $(elm).removeClass('css-1ek6qwp').addClass('css-1wtvmve');
        }
        function hoverCopyToClipBoardNormal(elm) {
            $(elm).removeClass('css-1wtvmve').addClass('css-1ek6qwp');
        }
        function copyToClipBoard(elm) {
            var copyText = document.getElementById("txt-code");
            copyText.select();
            copyText.setSelectionRange(0, 99999)
            document.execCommand("copy");
            $(elm).css('background-color', 'rgba(75, 182, 120, 0.7)');
            var templateCopySuccess = '<div class="css-1nbw1t11 css-uv22u3 css-j314r80" width="25px" height="25px" fill="#fff">';
            templateCopySuccess += '<svg fill="#fff" width="25px" height="25px" viewBox="0 0 13 10"><g fill="inherit" fill-rule="evenodd"><path fill-rule="nonzero" d="M4.131 7.89L1.05 4.78 0 5.831 4.131 10 13 1.051 11.958 0z"></path></g></svg>';
            templateCopySuccess += '</div>';
            templateCopySuccess += 'Copy thành công!';
            $(elm).empty().append(templateCopySuccess)
            setTimeout(function () {
                $(elm).css('background-color', 'rgba(67, 132, 245, 0.6)');
                $(elm).text('Copy Code to Clipboard')
                $('body').focus();
            }, 1500)
            return false;
            //alert("Copied the text: " + copyText.value);
        }
    </script>
