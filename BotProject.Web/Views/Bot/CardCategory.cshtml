                var listDropdown = $('<ul>').addClass('dropdown-menu category-select');
                var label = element.find('.text-select');
                var i = 0;

                // set default text
                label.html(selector.find('option:selected').text());

                // build list
                selector.find('option').each(function () {
                    var option = $(this);
