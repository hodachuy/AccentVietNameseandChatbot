                var fromPP = 0;
                var toPP = 0;
                var totalPP = 0;

                if (dataTable.length != 0) {
                    // đếm số index
                    var iCount = 1;
                    if (data.Page > 1) {
                        iCount = ((data.Page - 1) * pageSize) + 1;
                    }

                    $.each(dataTable, function (index, item) {
